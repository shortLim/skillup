<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.skillup.mapper.BoardMapper">

  <!-- 쿼리 보관 -->
  <sql id="criteria">
   	<trim prefix="(" suffix=") AND " prefixOverrides="OR">
 		<foreach collection="typeArr" item='type'>
 			<trim prefix="OR">
 				<choose>
 					<when test="type == 'T'.toString()">
 						title 	LIKE '%'||#{keyword}||'%'
 					</when>
 					<when test="type == 'C'.toString()">
 						content	LIKE '%'||#{keyword}||'%'
 					</when>
 					<when test="type == 'W'.toString()">
 						name 	LIKE '%'||#{keyword}||'%'
 					</when>
 					<when test="type == 'TCW'.toString()">
 						name || title || content) ~('.*' ||#{keyword}|| '.*'
 					</when>
 				</choose>
 			</trim>
 		</foreach>
  	</trim>
  </sql>

  <!-- 전체 게시물 수 조회 -->
  <select id="getTotalCount" resultType="int">
  	SELECT 	COUNT(*)
  	FROM 	tbl_board
  	WHERE 	pno > 0
  </select>


  <!-- 게시물 조회 -->
  <select id="getList" resultType="com.skillup.domain.BoardVO">
    SELECT 	*
    FROM 	tbl_board
    WHERE 	<!-- 보관해 둔 쿼리 사용 -->
			<include refid="criteria"/> pno > 0
	ORDER BY pno DESC limit 10 offset (#{pageNum}-1)*10

  </select>

  <!-- 게시물 수정 -->
  <update id="update">
    UPDATE  tbl_board
    SET     title = #{title}, name = #{name},
    		content = #{content},
    		modidate = CURRENT_TIMESTAMP
    WHERE   pno = #{pNo}
    AND 	pass = #{pass}
  </update>

  <!-- 게시물 하나 삭제 -->
  <delete id="delete">
  	DELETE
  	FROM 	tbl_board
  	WHERE 	pno = #{pNo}
  	AND 	pass = #{pass}
  </delete>

  <!-- 게시물 하나 조회 -->
  <select id="read" resultType="com.skillup.domain.BoardVO">
  	SELECT * FROM tbl_board WHERE pno = #{pNo} AND bno = 1
  </select>

  <!-- insert만 수행 -->
  <insert id="insert">
	INSERT INTO tbl_board (bNo,name,pass,title,content)
	VALUES (1,#{name},#{pass},#{title},#{content});
  </insert>

  <!-- コメント数変更 -->
  <update id="updateCCnt">
  	UPDATE 	tbl_board
  	SET 	ccnt = #{amount}
  	WHERE 	pno = #{pNo}
  </update>

    <!-- 照会数変更 -->
  <update id="updateHit">
  	UPDATE 	tbl_board
  	SET 	hit = hit+1
  	WHERE 	pno = #{pNo}
  </update>

</mapper>











